 -->
  </Solvers>
  
  <!-- Add this Events section to trigger output -->
  <Events maxTime="50000.0">
    <PeriodicEvent
        name="solverApplications"
        forceDt="1000.0"
        target="/Solvers/flowSolver"/>
    <PeriodicEvent
        name="vtkOutputs"
        timeFrequency="10000.0"
        target="/Outputs/vtkOutputPoro"/>
  </Events>

  <Outputs>
    <VTK
      name="vtkOutputPoro"
      plotFileRoot="SPE10_flow_msml"
      plotLevel="2"
      format="binary"/>

  </Outputs>
</Problem>
