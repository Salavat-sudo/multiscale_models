<?xml version="1.0" ?>

<Problem>

  <Mesh>
    <InternalMesh
      name="mesh1"
      elementTypes="{ C3D8 }"
      xCoords="{ 0, 365.76 }"
      yCoords="{ 0, 670.56 }"
      zCoords="{ -300, 0, 51.816, 351.816 }"
      nx="{ 240 }"
      ny="{ 220 }"
      nz="{ 85, 85, 85 }"
      cellBlockNames="{ underburdenBlock, reservoirBlock, overburdenBlock }"/>
  </Mesh>

  <Included>
    <File name="./SPE10_with_burdens_base.xml" />
  </Included>

  <Solvers
    gravityVector="{0.0, 0.0, -9.81}">

    <MultiphasePoromechanics
      name="PoromechanicsSolver"
      solidSolverName="mechanicsSolver"
      flowSolverName="twoPhaseFlow"
      logLevel="1"
      targetRegions="{ Reservoir, Burden }"
      stabilizationType="None"
      stabilizationRegionNames="{Reservoir, Burden}"
      stabilizationMultiplier="1.0">
      <NonlinearSolverParameters
        newtonMaxIter="25"
        newtonTol="1.0e-3"
        maxTimeStepCuts="2"
        maxAllowedResidualNorm="1e+15"
        lineSearchAction="None"/>
      <LinearSolverParameters
        solverType="gmres"
        preconditionerType="mgr"
        krylovTol="1e-4"
        krylovMaxIter="200"
        krylovAdaptiveTol="0"
        krylovWeakestTol="0.1"
        logLevel="1"/>
    </MultiphasePoromechanics>

    <SolidMechanicsLagrangianSSLE
      name="mechanicsSolver"
      timeIntegrationOption="QuasiStatic"
      logLevel="1"
      discretization="FE1"
      targetRegions="{ Reservoir, Burden }">
    </SolidMechanicsLagrangianSSLE>

    <CompositionalMultiphaseFVM
      name="twoPhaseFlow"
      logLevel="1"
      discretization="multiPhaseTPFA"
      targetRegions="{ Reservoir, Burden }"
      temperature="350.0"
      useMass="1">
    </CompositionalMultiphaseFVM>
  </Solvers>



  <Tasks>
    <MultiphasePoromechanicsInitialization
      name="equilStep"
      logLevel="1"
      poromechanicsSolverName="PoromechanicsSolver"/>
  </Tasks>



</Problem>
